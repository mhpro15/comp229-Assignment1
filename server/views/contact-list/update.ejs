<div class="edit-container">
    <h1>Update contact</h1>
    <form action="./<%=contact._id%>" method="POST">
        <label for="name">Name:</label>
        <input type="text" name="name" value="<%=contact.name%>">
        <br>
        <label for="number">Number:</label>
        <input type="text" name="number" value="<%=contact.number%>">
        <br>
        <label for="email">Email:</label>
        <input type="text" name="email"  value="<%=contact.email%>">

       
    <button type="submit" class="updateBtn updatebtn">Update</button>
   <button class="updateBtn deleteBtn"><a href="/contact-list/delete/<%=contact._id%>">Delete</a></button>
    <button class="updateBtn cancelBtn"><a href="/contact-list">Cancel</a></button>
    
    
    </form>
    
</div>

